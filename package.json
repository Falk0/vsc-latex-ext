{
  "name": "latexgpt",
  "displayName": "latexGPT",
  "description": "promt gpt3 while editing latex files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.openLatexGenerator"
  ],
  "main": "./extension.js",
  
  "contributes": {
    "configuration": {
      "title": "LaTeX GPT",
      "properties": {
          "latexGpt.apiKey": {
              "type": "string",
              "default": "",
              "description": "OpenAI API Key"
          }
      }
  },
    "commands": [
      {
        "command": "extension.openLatexGenerator",
        "title": "Open LaTeX Generator"
      }
    ],
    "snippets": [
      {
        "language": "latex",
        "path": "./snippets/vscode_snippets.code-snippets"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^3.3.0"
  }
}
